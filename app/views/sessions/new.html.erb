<h1>Login To Otaku!</h1>

<br>
<ul>
<% if !@user %> 
        <%="Login Error"%>
    
<% end %>
</ul>
<br>

<div id="login-form">
    <%= form_with(model: User.new, url: "/login") do |f| %>
        <div class="form-control">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-input" %>
        </div>
        <div class="form-control">
            <%= f.label :password, class: "form-label" , class: "form-label" %>
            <%= f.password_field :password, class: "form-input" %>
        </div>
        <%= f.submit "Sign In"%>
    <% end %>
    Don't have an account? <%= link_to "Sign up", new_user_path, class: "show-signup" %> here.
    <p>Social Login:</p>
    <div class="third-party-login">
        <%= button_to "Log in with Google", '/auth/google_oauth2'  %>
    </div>
</div>
<h1>Create A Show</h1>
<br>
<ul>
<% if @show.errors.any? %> 
    <% @show.errors.each do |error| %>
        <li><%=error.full_message%></li>
    <% end %>
<% end %>
</ul>
<br>
<div id="show-form" class="hide">
    <%= form_with(model: @show) do |f| %>
        <div class="form-control">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-input" %>
        </div>
        <div class="form-control">
            <%= f.label :air_time, class: "form-label" %>
            <%= f.number_field :air_time, step: 0.1, class: "form-input" %>
        </div>
        <div class="form-control">
            <%= f.label :rating, class: "form-label" %>
            <%= f.number_field :rating, class: "form-input" %>
        </div>
        <br>

 <br>

        <h2><%= f.submit :create%></h2>
    <% end %>

</div>
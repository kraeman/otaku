<h1>Edit a Show</h1>

<br>
<ul>
<% if @show.errors.any? %> 
    <% @show.errors.each do |error| %>
        <li><%=error.full_message%></li>
    <% end %>
<% end %>
</ul>
<br>

<div id="show-form" class="hide">
    <%= form_with(model: @show) do |f| %>
        <div class="form-control">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-input" %>
        </div>
        <div class="form-control">
            <%= f.label :air_time, class: "form-label" %>
            <%= f.number_field :air_time, class: "form-input" %>
        </div>
        
        <%= f.submit :update%>
    <% end %>

    <% if User.find(session[:user_id]).email == "kraewind@gmail.com" %>
        <%=button_to "Delete Show", "/shows/#{@show.id}", method: "delete"%>
    <% end %>

</div>
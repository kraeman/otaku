<h1>Edit a Show</h1>

<br>
<ul>
<%=display_error_messages_if_any(@show)%>
</ul>
<br>

<div id="show-form" class="hide">
    <%= form_with(model: @show) do |f| %>
         <%= render partial: "form", locals: {f: f} %>
        
        <%= f.submit :update%>
    <% end %>

    <% if User.find(session[:user_id]).email == "kraewind@gmail.com" %>
        <%=button_to "Delete Show", "/shows/#{@show.id}", method: "delete"%>
    <% end %>

</div>
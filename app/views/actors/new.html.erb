<h1>Create an Actor</h1>
<br>
<ul>
<% if @actor.errors.any? %> 
    <% @actor.errors.each do |error| %>
        <li><%=error.full_message%></li>
    <% end %>
<% end %>
</ul>
<br>
<div id="actor-form" class="hide">
    <%= form_with(model: @actor) do |f| %>
        <div class="form-control">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-input" %>
        </div>
        <div class="form-control">
            <%= f.label :dob, class: "form-label" %>
            <%= f.date_field :dob, class: "form-input" %>
        </div>
        <%= f.submit :create%>
    <% end %>

</div>
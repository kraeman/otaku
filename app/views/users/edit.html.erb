<br>
<ul>
<% if @user.errors.any? %> 
    <% @user.errors.each do |error| %>
        <li><%=error.full_message%></li>
    <% end %>
<% end %>
</ul>
<br>

<%= form_with(model: @user) do |f| %>
        <div class="form-control">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-input" %>
        </div>
        <div class="form-control">
            <%= f.label :admin, class: "form-label" %>
            <%= f.check_box :admin, class: "form-input" %>
        </div>
        <div class="form-control">
            <%= f.label :dob, class: "form-label" %>
            <%= f.date_field :dob, max: Date.today, class: "form-input" %>
        </div>
        <div class="form-control">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-input" %>
        </div>
        <% if !@user.cvo %>
            <div class="form-control">
                <%= f.label :email, class: "form-label"%>
                <%= f.email_field :email, class: "form-input" %>
            </div>
            <div class="form-control">
                <%= f.label :password, class: "form-label"%>
                <%= f.password_field :password, class: "form-input" %>
            </div>
        <% end %>
        <%= f.submit :update%>
    <% end %>